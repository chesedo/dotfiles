(include "components/clock.yuck")
(include "components/speaker.yuck")
(include "components/mic.yuck")

(defwidget bar-left []
  (centerbox :orientation "h"
    (workspaces :tags wm-tags-0)
    (music)
    (box)
  )
)
(defwidget bar-right []
  (centerbox :orientation "h"
    (workspaces :tags wm-tags-1)
    (box)
    (sidestuff)
  )
)

(defwidget sidestuff []
  (box :class "sidestuff" :orientation "h" :space-evenly false :halign "end"
    (metric2 :label "ÔãõÔ∏Å"
            :value "${round(EWW_CPU.avg, 1)}%"
            :onclick "htop"
    )
    (metric2 :label "Ô°ö"
            :value "${round(EWW_RAM.used_mem / 1024 / 1024, 2)} Gb"
            :onclick "htop"
    )
    (metric2 :label "Ôüâ"
            :value "${round(EWW_DISK["/"].used / 1024 / 1024 / 1024, 1)} Gb"
    )
    (mic)
    (speaker)
    (clock)
  )
)

(defwidget workspaces [tags]
  (literal :content {tags})
)

(defwidget music []
  (box :class "music"
       :orientation "h"
       :space-evenly false
       :halign "center"
    {music != "" ? "üéµ${music}" : ""}))

(defwidget metric2 [label value ?onclick]
  (box :orientation "h"
       :class "metric"
       :space-evenly false
    (button :onclick "alacritty --command '${onclick}' &"
      (box
          :space-evenly false
        (box :class "label" label)
        (box :class "value" value)
      )
    )
  )
)



(deflisten music :initial ""
  "playerctl --follow metadata --format '{{ artist }} - {{ title }}' || true")

(deflisten wm-tags-0
  "leftwm-state -w 0 -t ~/.config/leftwm/themes/current/template.liquid")
(deflisten wm-tags-1
  "leftwm-state -w 1 -t ~/.config/leftwm/themes/current/template.liquid")

(defwindow bar0
  :monitor 0
  :windowtype "dock"
  :geometry (geometry :x "0%"
                      :y "1%"
                      :width "99%"
                      :height "32px"
                      :anchor "top center")
  :reserve (struts :side "top" :distance "5%")
  (bar-left))
(defwindow bar1
  :monitor 1
  :windowtype "dock"
  :geometry (geometry :x "10px"
                      :y "1%"
                      :width "90%"
                      :height "32px"
                      :anchor "top left")
  :reserve (struts :side "top" :distance "5%")
  (bar-right))
