    (workspaces :tags wm-tags-0)
    (label :text active-window)
    (music)
  )
)
(defwidget bar-right []
  (centerbox :orientation "h"
    (workspaces :tags wm-tags-1)
    (box)
    ; (label :text active-window)
    (sidestuff)
  )
)

