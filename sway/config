# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.

# global variables
include $HOME/.config/sway/definitions
include /etc/sway/definitions

include /etc/sway/inputs/*
include /etc/sway/outputs/*

### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Your preferred terminal emulator
set $term alacritty

# Name workspaces
set $ws1 1:terminal
set $ws2 2:web
set $ws3 3:code
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8:work
set $ws9 9:chat
set $ws10 10:leisure

# Your preferred application launcher
# Note: pass the final command to swaymsg so that the resulting window can be opened
# on the original workspace that the command was run on.
# set $menu dmenu_path | dmenu | xargs swaymsg exec --

input type:keyboard {
  xkb_options caps:swapescape
  xkb_layout us
  xkb_variant colemak
}

# enable modes
include $HOME/.config/sway/modes/*

# only enable this if every app you use is compatible with wayland
# xwayland disable

### Output configuration
#
# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/)
output HDMI-A-1 bg ~/.config/sway/background_left.jpg fit
output DP-1 bg ~/.config/sway/background_right.jpg fit

bar {
  id default
  swaybar_command waybar
  position $waybar_position
}

#
# Example configuration:
#
#   output HDMI-A-1 resolution 1920x1080 position 1920,0
#
# You can get the names of your outputs by running: swaymsg -t get_outputs

#
# This will lock your screen after 60 seconds of inactivity, then turn off
# your displays after another 240 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.

exec udiskie --tray

# user config
include $HOME/.config/sway/config.d/*

default_border pixel 3
smart_gaps on
gaps inner 20
gaps outer -1

## client.focused #cccccc99 #cccccc99 #ffffff #bbbbffee #ffffff88
## client.focused_inactive #cccccc99 #cccccc99 #ffffff #00000022 #00000022
## client.unfocused #cccccc99 #cccccc99 #ffffff #00000022 #00000022

font FiraCode Nerd Font

output HDMI-A-1 pos 0 0 res 1920x1080
output DP-1 pos 1920 0 res 1920x1080

bindsym $mod+Control+Shift+$right move workspace to output right
bindsym $mod+Control+Shift+$left move workspace to output left

exec ~/git/upwork-wayland/screenshot_adapter.py
